@using ReportsManagement.Models
@using System.Collections.Generic;

@{
    ViewBag.Title = "Editar Empleado";
    Layout = "~/Views/Shared/_Layout2Admin.cshtml";
    bool error = (bool)ViewData["error"];
    User user = new User();
}

@if (!error)
{
    user = (User)@ViewData["user"];
}


@section noError 
{
    @if(!error)
    {
        <!-- Mostrara un formulario para actualizar un empleado -->
        <article style="clear: both">
            <div class="col-md-10 col-md-offset-2" style="margin-bottom:30px;">
                <h3>Actualizando Empleado: @user.UserName</h3>
            </div>
            <form class="form-horizontal col-md-8 col-md-offset-2" method="POST" action="../Account/updateUser" id="formAdd">
                <div class="form-group">
                    <label for="inputText" class="col-sm-2 control-label">Nombre Usuario: </label>
                    <div class="col-sm-10" id="popName" data-toggle="popover" data-trigger="manual" data-placement="top" data-content="Debe ingresar un nombre.">
                        <input type="text" class="form-control" placeholder="Nombre" value="@user.UserName" name="name" id="name" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputText" class="col-sm-2 control-label">Contraseña: </label>
                    <div class="col-sm-10" id="popOldPass" data-toggle="popover" data-trigger="manual" data-placement="top" data-content="Debe ingresar su contraseña actual.">
                        <input type="password" class="form-control" placeholder="Contraseña" value="" name="oldpass" id="oldpass">
                    </div>
                </div>
                <div class="form-group">
                    <div id="popPassNC" data-toggle="popover" data-trigger="manual" data-placement="top" data-content="Contraseñas no coinciden">
                    </div>
                    <label for="inputText" class="col-sm-2 control-label">Nueva Contraseña: </label>
                    <div class="col-sm-10" id="popPass" data-toggle="popover" data-trigger="manual" data-placement="top" data-content="Debe ingresar una nueva contraseña.">
                        <input type="password" class="form-control" placeholder="Contraseña" value="" name="pass" id="pass">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputText" class="col-sm-2 control-label">Confirmar Contraseña: </label>
                    <div class="col-sm-10" id="popPass2" data-toggle="popover" data-trigger="manual" data-placement="top" data-content="Debe confirmar la contraseña.">
                        <input type="password" class="form-control" placeholder="Confirmar Contraseña" value="" name="pass2" id="pass2">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-2">
                        <button type="button" class="btn btn-success" onclick="validateFormAddUser('oldpass', 'popOldPass', 'pass', 'popPass', 'pass2', 'popPass2', 'popPassNC', 'formAdd');">Agregar</button>
                    </div>
                </div>
            </form>
        </article>
    }    
}
